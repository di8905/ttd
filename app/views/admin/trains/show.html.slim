h1 
  => t('.title')
  = @train.number
p
  strong 
    =t('activerecord.models.route')
    |:
  =< link_to @train.route.name, admin_route_path(@train.route)
p
  -if @train.carriages.present?
    strong 
      =t('.car_list')
      |:
    table
      thead
      tr
        th 
          = t('activerecord.attributes.carriage.number')
        th 
          = t('activerecord.attributes.carriage.type') 
        th colspan="3"
      - @train.carriages.each do |carriage|
        tr
          td
            = link_to "#{t('activerecord.models.carriage')} â„–#{carriage.number}", admin_carriage_path(carriage)
          td
            = link_to carriage.type_name, admin_carriage_path(carriage)
          td
            = link_to t('common.show'), admin_carriage_path(carriage)
          td 
            =link_to t('common.edit'), edit_admin_carriage_path(carriage)  
          td 
            = link_to t('common.delete'), admin_carriage_path(carriage), method: :delete, data: { confirm: t('shure_alert')}  
