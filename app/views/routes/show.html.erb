<p id="notice"><%= notice %></p>

<p>
  <strong>Название маршрута: </br> </strong>
  <%= @route.name %>
</p>

<% if @route.railway_stations.present? %>
  <p>
    <strong> Список станций маршрута: </strong>
  </p>
  <ul>
   <% @route.railway_stations.ordered.each do |station| %>
   <li> <%= station.title %> </li>
   <% end %>
  </ul>
  <% else %>
  <p>
  <strong> Станций на маршруте пока нет </strong>
  </p>
  <% end %>

  <% if @route.trains.present? %>
    <p>
      <strong> Список поездов на маршруте: </strong>
    </p>
    <ul>
     <% @route.trains.each do |train| %>
     <li> <%= train.number %> </li>
     <% end %>
    </ul>
    <% else %>
    <p>
    <strong> Нет поездов на маршруте </strong>
    </p>
    <% end %>

<%= link_to 'Редактировать', edit_route_path(@route) %>
<%= link_to 'Назад', routes_path %>
