
<p>
  <strong>Номер:</strong>
  <%= @train.number %>
</p>
<p>
  <strong>На станции: </strong>
  <% if @train.current_station.present? %>
   <%= @train.current_station.title %>
   <% else %>
    Не указано
   <% end %>
</p>
<p>
  <strong>Назначенный маршрут:</strong>
  <% if @train.route.present? %>
   <%= @train.route.name %>
   <% else %>
    Маршрут не назначен
   <% end %>
</p>

<strong> Список вагонов поезда </strong>
<ul>
<% @train.carriages.ordered(@train.carriage_sort_order).each do |carriage| %>
 <li> <%= link_to "#{carriage.number}) #{carriage.type_name}", carriage.becomes(Carriage) %> </li>
<% end %>
</ul>


<%= link_to 'Редактировать', edit_train_path(@train) %> |
<%= link_to 'Назад', trains_path %>
